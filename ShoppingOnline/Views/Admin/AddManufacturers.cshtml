@{
    ViewData["Title"] = "Thêm hãng sản xuất Page";
    Layout = "~/Views/Shared/AdminHeader-Footer.cshtml";
}
<div class="right">
    <div class="right__content">
        <div class="right__title">Bảng điều khiển</div>
        <p class="right__desc">Chèn thể loại</p>
        <div class="right__formWrapper">
            <form action="~/Manufacturers/Add" method="post">
                <div class="right__inputWrapper">
                    <label for="title">Tiêu đề</label>
                    <input type="text" placeholder="Tên hãng" name="ManufacturerName">
                </div>
                <button class="btn" type="submit">Thêm</button>
            </form>
        </div>
    </div>
</div>
